<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#689f38</item>
        <item name="colorAccent">#2196f3</item>
        <item name="colorIndicatorNotSynced">?android:attr/textColorSecondary</item>
        <item name="colorListDivider">#1f000000</item>
        <item name="backgroundColorListItem">@android:color/transparent</item>
        <item name="backgroundColorListItemSelected">#1e000000</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#689f38</item>
        <item name="colorAccent">#2196f3</item>
        <item name="colorIndicatorNotSynced">?android:attr/textColorSecondary</item>
        <item name="colorListDivider">#1fffffff</item>
        <item name="backgroundColorListItem">@android:color/transparent</item>
        <item name="backgroundColorListItemSelected">#33ffffff</item>
    </style>

    <style name="AppThemeDarkToolbarForLightThemes" parent="AppThemeDark">
        <item name="popupMenuStyle">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <!-- Use toolbar instead of old school actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/AppThemeDarkToolbarForLightThemes</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <!-- Use toolbar instead of old school actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/AppThemeDark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>
